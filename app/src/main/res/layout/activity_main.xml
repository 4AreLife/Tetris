<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_gravity="clip_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headline"
        android:layout_width="277dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/goodtetris"
        android:gravity="center_horizontal"
        android:text="Tetris"
        android:textSize="58sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_playgame_button"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/goodtetris"
        android:text="Play Game"
        app:layout_constraintBottom_toTopOf="@+id/main_multiplayer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headline"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/main_multiplayer_button"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/goodtetris"
        android:text="Multiplayer"
        app:layout_constraintBottom_toTopOf="@+id/main_statistics_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_statistics_button"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/goodtetris"
        android:text="Statistics"
        app:layout_constraintBottom_toTopOf="@+id/main_button_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_button_options"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="148dp"
        android:fontFamily="@font/goodtetris"
        android:text="Options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>